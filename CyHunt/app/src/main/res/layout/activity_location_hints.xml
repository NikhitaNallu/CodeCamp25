<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HuntsLocationsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/red"
        android:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/container" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="5dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/location_hint_1"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="110dp"
            android:text="Hint 1:"
            android:layout_marginTop="10dp"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/location_hint_2"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="110dp"
            android:text="Hint 2:"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/location_hint_3"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:textAlignment="center"
            android:text="Hint 3:"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/location_quiz_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quiz:"
            android:textSize="20dp"
            android:textAlignment="center">

        </TextView>
        <EditText
            android:id="@+id/location_quiz_guess_edit_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">


        </EditText>

        <Button
            android:id="@+id/location_submit_guess_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:backgroundTint="@color/red"
            android:textSize="20dp"
            android:layout_marginTop="40dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/hint_1_box"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:contentDescription="Image"
        android:background="@color/red"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="50dp"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:text="Hint1"/>

    <TextView
        android:id="@+id/hint_2_box"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:contentDescription="Image"
        android:background="@color/red"
        android:layout_marginTop="120dp"
        android:clickable="true"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:text="Hint2"/>

    <TextView
        android:id="@+id/hint_3_box"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:contentDescription="Image"
        android:background="@color/red"
        android:layout_marginTop="230dp"
        android:clickable="true"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:text="Hint3"/>


</androidx.constraintlayout.widget.ConstraintLayout>